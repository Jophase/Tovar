<Window x:Class="OnlineStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Online Store" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="149*"/>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="329*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="ProductListBox" Margin="10,10,10,10" Grid.ColumnSpan="3" />
        <Button Content="Load Products" HorizontalAlignment="Left" VerticalAlignment="Top" Click="LoadProducts_Click" Margin="218,10,0,0" Grid.Column="2"/>
    </Grid>
</Window>